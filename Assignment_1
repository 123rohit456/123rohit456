#include <stdio.h>

void addition();
void multiplication();
void saddle();

void addition()
{
    int i,j,n;
    printf("Enter the size of matrix : ");
    scanf("%d",&n);
}

int main()
{   int ch,y;
    do
    {
       printf("Matrix operations : 1.Addition\n2.Multiplication\n3.Saddle point");
       scanf("%d",&ch);
       switch(ch)
       {
           case 1:
           addition();
           case 2:
           multiplication();
           case 3:
           saddle();
       }printf("Do you wish to continue(0/1) ");
       scanf("%d",&y);
    }while(y==1);
}
